 * @var string hello_name
 * @var string global_hello_name
 * @var \Z\SiteBuildLayer\PhpFileSiteBuildLayer|string content
 */
}}
<html>
	<head>
		<title>small sitebuild layer example</title>
	</head>
	<body>
		<header>
            <nav>
            	<a href="?language=en">english page</a>
            	|
            	<a href="?language=hu">hungarian page</a>
            </nav>
    		<h1>
            	hello world
            	<span class="name">
            	   {{ hello_name }}
            	</span>
            	!
    		</h1>
            <h2>
            	global hello world
            	<span class="name">
            		{{ global_hello_name }}
            	</span>
            	!
            </h2>
		</header>
		<main>
            {{& content }}
		</main>
	</body>
</html>




